<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column"
>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="header.container" remove="true"/>
            <referenceBlock name="footer-container" remove="true"/>
            <referenceBlock name="breadcrumbs" remove="true"/>
            <block class="Magento\Framework\View\Element\Template" name="openpos.tillsession.login" template="Zero1_OpenPos::tillsession/login.phtml" cacheable="false">
                <arguments>
                    <argument name="form_post" xsi:type="string">/openpos/tillsession/loginpost</argument>
                </arguments>
                <block class="Magento\Theme\Block\Html\Header\Logo" name="openpos.tillsession.login.logo" template="Zero1_OpenPos::html/header/logo.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
